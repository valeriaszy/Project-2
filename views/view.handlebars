<div class="container-fluid">
  <div class="row">
    <div class="col-8 offset-2">
        <h1>{{recipe.name}}</h1>
    </div>
  <div class="row">
    <img src={{recipe.imageURL}} alt="..." class="img-fluid img-thumbnail d-block mx-auto">
  </div>
    <div class="col-md-11 mx-auto">
      <div class="row mt-5 mb-2">
        <h2>Ingredient</h2>
      </div>
      <div class="offset-1">
        <ul>
          {{#each recipe.Ingredients}}
          <li>
            <span class="mr-1">{{this.Quantity.quantity}}</span>
            <span class="mr-1">{{this.Quantity.unitOfMeasure}}</span>
            <span class="mr-1">of</span>
            <span>{{this.name}}</span>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="row mt-5 mb-2">
        <h2>Instruction</h2>
      </div>
      <div>
        {{recipe.instructions}}
      </div>
    </div>
  </div>
</div>
